<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs')%>
</head>
<body>
    <div class="bg-image"></div>
    <div class="menu-text">
        <header>
            <%- include ('../partials/header.ejs')%>
        </header>
        <div id="menu" class="accordion">
            <div class="content">
                    <h2 class="h2">Our Menu</h2>
                    <i class="arrow"></i>
            </div>
            <div class="more-content">
                <ul id="menu-items">
                    <% for (let i = 0; i < ourMenu.length; i++){ %>
                    <li>
                    <%= ourMenu[i].name + ' - ' + ourMenu[i].description %>
                    <img class="food" src="<%= '/images/' + ourMenu[i].imgName %>" >
                    </li>
                    <% } %>
                </ul>
            </div>
        </div> 
    </div>
    <footer>
    </footer>
</div>
    <script>
        $(() => {
            $('.content').click(function(){
            $(this).toggleClass('active');
            $(this).parent().find('.arrow').toggleClass('arrow-animate');
            $(this).parent().find('.more-content').slideToggle(280);
            });
        })
    </script>
</body>
</html>